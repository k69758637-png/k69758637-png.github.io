  <script>
    function sendWhatsApp(event) {
      event.preventDefault();
      const name = event.target.querySelector('input[type="text"]').value;
      const phone = event.target.querySelector('input[type="tel"]').value;
      const message = `Здравствуйте!%0A%0AИмя: ${name}%0AТелефон: ${phone}%0A%0AХочу записаться на консультацию по электроэпиляции.`;
      const whatsappNumber = '77473170717';
      window.open(`https://wa.me/${whatsappNumber}?text=${message}`, '_blank');
    }
  </script>

